<% content_for :title do %>
  <%= @entry.meal_type %> &ndash; <%=Date.today.strftime('%A - %B %d, %Y') %>
<% end %>

<div class="columns mt-6 is-centered">
  <div class="column is-one-third">
    <nav class="panel is-link">
      <p class="panel-heading">
        <%= @entry.meal_type %>:
        
      </p>

      

     
      <div class="card-content-body">
        <p><span>
          <strong>Description:</strong>
          <%= @entry.description %>
          </span>
        </p>

        <p class="grey"><span>
          <strong>Calories:</strong>
          <%= @entry.calories %>
          </span>
        </p>

        <p><span>
          <strong>Carbohydrates:</strong>
          <%= @entry.carbohydrates %>
          </span>
        </p>

        <p class="grey"><span>
          <strong>Protein:</strong>
          <%= @entry.protein %>
          </span>
        </p>

        <p><span>
          <strong>Fats:</strong>
          <%= @entry.fats %>
          </span>
        </p>
      </div>
      <p class="time">Logged <%= time_ago_in_words(@entry.created_at) %> ago</p>

  </div>

  <div class="columns is-centered mt-6">
      <div class="column">
        <%= link_to "Edit", edit_entry_path(@entry), class: "button is-gray" %>
        <%= link_to "Back to entries", entries_path,class: "button is-light" %>
        <%= link_to "Delete", entry_path(@entry), method: :delete, data: { confirm: "Are you sure?" }, class: "button is-gray" %>
      </div>
      <div class="column">
        <!-- -->
      </div>
    </div>
  </div>
</div>